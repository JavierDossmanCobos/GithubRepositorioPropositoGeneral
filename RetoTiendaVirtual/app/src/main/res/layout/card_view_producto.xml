<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10sp"
    app:cardElevation="10sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10sp"
    android:layout_marginVertical="5sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgCardViewProducto"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:scaleType="fitXY"
 />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:layout_marginEnd="5sp"
            android:layout_marginBottom="5sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTituloProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginBottom="5sp"
                    android:gravity="center_horizontal"
                    android:text="Product name"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDescripcionProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginBottom="5sp"
                    android:gravity="center_horizontal"
                    android:text="Es un tipo de zapato putamente comodo" />

                <TextView
                    android:id="@+id/txtPrecioProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginBottom="5sp"
                    android:gravity="center_horizontal"
                    android:text="Precio" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/opcionesAdminProducto"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/btnEditaProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_marginLeft="5sp"
                    android:backgroundTint="#FFFFFF"
                    app:srcCompat="@drawable/ic_edit" />

                <ImageButton
                    android:id="@+id/btnEliminaProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_marginLeft="5sp"
                    android:backgroundTint="#FFFFFF"
                    app:srcCompat="@drawable/ic_delete" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/opcionesClientProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnCompraProducto"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_marginLeft="5sp"
                    android:backgroundTint="#FFFFFF"
                    app:srcCompat="@drawable/ic_purchase_product" />
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
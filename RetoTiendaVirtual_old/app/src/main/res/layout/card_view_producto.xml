<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnEliminarProducto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10sp"
    android:layout_marginVertical="5sp"
    app:cardCornerRadius="10sp"
    app:cardElevation="10sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgCardViewSucursal"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/avatars" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:layout_marginEnd="5sp"
            android:layout_marginBottom="5sp">

            <TextView
                android:id="@+id/txtTituloProducto"
                android:layout_width="213dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="5sp"
                android:gravity="center_horizontal"
                android:text="Adidas"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPrecioProducto"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:gravity="end"
                android:text="$3000000" />

            <TextView
                android:id="@+id/txtDescripcionProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="30sp"
                android:gravity="center_horizontal"
                android:text="Es un tipo de zapato putamente comodo" />

            <LinearLayout
                android:id="@+id/opcionesAdminProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/btnEliminaProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_marginLeft="10sp"
                    android:backgroundTint="#FFFFFF"
                    app:srcCompat="@drawable/ic_delete" />

                <ImageButton
                    android:id="@+id/btnEditaProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10sp"
                    android:backgroundTint="#FFFFFF"
                    app:srcCompat="@drawable/ic_edit" />
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
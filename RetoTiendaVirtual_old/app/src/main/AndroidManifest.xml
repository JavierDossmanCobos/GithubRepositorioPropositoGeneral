<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RetoTiendaVirtual"
        tools:targetApi="31">
        <activity
            android:name=".ui.producto.activities.EditarProdutoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.sucursales.activities.DetallesSucursalesActivity"
            android:exported="false"
            android:theme="@style/Theme.RetoTiendaVirtual.NoActionBar" />
        <activity
            android:name=".ui.servicios.activities.DetallesServiciosActivity"
            android:exported="false"
            android:theme="@style/Theme.RetoTiendaVirtual.NoActionBar" />
        <activity
            android:name=".ui.usuarios.activity.RegistroActivity"
            android:exported="false"
            android:theme="@style/Theme.RetoTiendaVirtual.NoActionBar" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.RetoTiendaVirtual.NoActionBar" />
        <activity
            android:name=".ui.producto.activities.DetallesProductoActivity"
            android:exported="false"
            android:theme="@style/Theme.RetoTiendaVirtual.NoActionBar" />
        <activity
            android:name=".LauncherActivity"
            android:exported="false"
            android:theme="@style/Theme.RetoTiendaVirtual.NoActionBar" />
        <activity
            android:name=".ui.usuarios.activity.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.RetoTiendaVirtual.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>